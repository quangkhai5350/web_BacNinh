@using webvl2024_BacNinh.Models
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<style>
    .about-container p img{
        width:100% !important;
    }
</style>
<div class="row wrapper">
    @*<div class="divide24"></div>*@
    <div class="col-md-2" style="padding:0 0px 0 5px !important">

        <div class="card card_t  " style="background:none;">
            <div>
                <div class="nav-side-menu">
                    <div class="header bgcardhead header_t" style=" border-bottom: 2px solid white !important;">
                        <label class="label_cardhead">
                            @webvl2024_BacNinh.i18n.Common.Introduction
                        </label>

                    </div>
                    <div class="body" style=" background-color: #006fc7; border-color: #006fc7; margin:-1px">
                        <style>
                            .ul_danhmuc {
                                list-style: none;
                                padding-inline-start: 0px;
                            }

                                .ul_danhmuc li {
                                    border-bottom: 1px solid rgba(248, 248, 248, 0.17);
                                    padding-top: 8px;
                                    padding-bottom: 8px;
                                    transition: 0.5s;
                                }

                                    .ul_danhmuc li:hover {
                                        border-bottom: 1px solid white;
                                    }

                                    .ul_danhmuc li .catergory {
                                        color: white;
                                        text-align: justify;
                                        font-weight: 600;
                                        text-decoration: none;
                                    }

                                    .ul_danhmuc li a i {
                                        margin-right: 10px;
                                    }
                        </style>
                        <ul class="ul_danhmuc menu-content" data-toggle="collapse" data-target="#menu-content">
                            @if (ViewBag.tong > 0)
                            {
                                foreach (m_gioithieu g in ViewBag.active)
                                {
                                    <li class="active">
                                        <a href="#gioithieutt-@g.id" data-toggle="pill" class="catergory">
                                            <i class="icon-caret-right"></i>&nbsp; @g.ghichu
                                        </a>
                                    </li>
                                }
                                if (ViewBag.tong > 1)
                                {
                                    foreach (m_gioithieu g in ViewBag.GioiThieu)
                                    {
                                        <li>
                                            <a href="#gioithieutt-@g.id" data-toggle="pill" class="catergory">
                                                <i class="icon-caret-right"></i>&nbsp; @g.ghichu
                                            </a>
                                        </li>
                                    }
                                }

                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="divide16"></div>
    </div>
    <div class="col-md-10">
        <div class="tab-content" style="display:block !important">
            @if (ViewBag.tong > 0)
            {
                foreach (m_gioithieu g in ViewBag.active)
                {
                    <div id="gioithieutt-@g.id" class="tab-pane fade in active">
                        <div class="about-container">
                            @Html.Raw(g.noidung)
                        </div>
                    </div>
                }
                if (ViewBag.tong > 1)
                {
                    foreach (m_gioithieu g in ViewBag.GioiThieu)
                    {
                        <div id="gioithieutt-@g.id" class="tab-pane fade in ">
                            <div class="about-container">
                                @Html.Raw(g.noidung)
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>